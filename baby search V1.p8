-- niveaux

--fin de niveau
--game over par fun du chrono
function lose()
 if(time() - last) > 30 then
 cls()
 print("time's up! appuyez sur \n entree \n  pour recommencer",
 5, 60, 7)
 music(8)
 end
 if (btn(🅾️)) then
  _init()
  _draw()
 end
end

--niveau gagne
function stage_clear()
 if (p.keys == 1) then
 cls()
 print("niveau 1 complete", 5, 50, 7)
 print("appuyez sur ❎", 5, 60, 7)
 print("pour continuer", 5, 70, 7)
 end
 if (btn(❎)) then
 --start niveau 2
 end
end




