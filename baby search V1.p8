-- user interface
function draw_ui()
 camera()
	spr(70,2,2)
	print("x"..p.keys,10,2,7)
end

function timer()
 time()
 check = flr(time())
end

function draw_time()
 camera()
 print(check - last, 120, 2, 0)
end
