-- main functions

function _init()
 create_player()
 last=flr(time())
 music(0)
end

function _update60()
 player_movement()
 update_camera()
end

function _draw()
 map_level_1()
	draw_player()
	draw_ui()
	draw_time()
	lose()
	stage_clear()
end
